{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es6",
      "es2017",
      "esnext.asynciterable",
      "dom"
    ],
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
//    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
//    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": false,
    "importHelpers": true,
    "jsx": "react"
  },
  "include": [
    "src/"
  ],
  "exclude": [
    ".yarn",
    "tests",
    "dist",
    "**/*.test.tsx",
    "**/*.test.ts",
    "public",
    "jest",
    "src/setupMocks.ts",
    "src/setupEnzyme.ts"
  ]
}
